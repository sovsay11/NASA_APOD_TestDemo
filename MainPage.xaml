<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NASA_APOD_TestDemo.MainPage">
    <ScrollView>
        <VerticalStackLayout>
            <!--Image viewer-->
            <Image x:Name="ImageNASAPicture"
                   VerticalOptions="StartAndExpand"
                   IsVisible="Collapse" />

            <!--Video viewer-->
            <WebView x:Name="MediaNASAVideo"
                     IsVisible="Collapse"
                     VerticalOptions="StartAndExpand"
                     HeightRequest="400"
                     WidthRequest="400" />

            <!--Date picker-->
            <Frame VerticalOptions="End">
                <VerticalStackLayout>
                    <Label Text="Pick a date" />
                    <DatePicker x:Name="DatePickerLocalDate" />
                </VerticalStackLayout>
            </Frame>

            <!--Button to search-->
            <Button x:Name="ButtonSearch"
                    Text="APOD Search"
                    VerticalOptions="End"
                    Clicked="ButtonSearch_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
